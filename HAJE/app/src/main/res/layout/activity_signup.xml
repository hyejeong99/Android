<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_bg_sign_up"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputDepart"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="95dp"
                android:background="@drawable/ic_input_box"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/inputID"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="46dp"
                android:background="@drawable/ic_input_box"
                android:hint="laonhaje@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/inputName"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:background="@drawable/ic_input_box"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/inputPW"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="47dp"
                android:background="@drawable/ic_input_box"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/inputPW2"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="47dp"
                android:background="@drawable/ic_input_box"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/inputCar"
                        android:layout_width="239dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="47dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_input_box"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="15sp" />

                    <RadioGroup
                        android:id="@+id/rGroup"
                        android:layout_marginTop="47dp"
                        android:orientation="horizontal"
                        android:theme="@style/CustomRadioTheme">

                        <RadioButton
                            android:id="@+id/rBtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="자동"
                            android:textSize="13sp" />

                        <RadioButton
                            android:id="@+id/rBtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수동"
                            android:textSize="13sp" />
                    </RadioGroup>

                </TableRow>

            </TableLayout>

            <EditText
                android:id="@+id/inputNum2"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="47dp"
                android:background="@drawable/ic_input_box"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="368dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_next_seletor" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
