<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".PaymentActivity">

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="310dp"
        android:layout_marginTop="186dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_firstNum"
                android:layout_width="62.7dp"
                android:layout_height="25.08dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/input_secondNum"
                android:layout_width="62.7dp"
                android:layout_height="25.08dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/mainPurple"
                android:inputType="phone" />

            <EditText
                android:id="@+id/input_thirdNum"
                android:layout_width="62.7dp"
                android:layout_height="25.08dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="@color/mainPurple"
                android:inputType="phone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="53dp"
            android:layout_marginRight="25dp"
            android:text="20,000원"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_remainPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:text="42,000원"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="23dp">

            <ImageButton
                android:id="@+id/btnCharge"
                android:layout_width="92dp"
                android:layout_height="34.2dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_charge_selector" />

            <ImageButton
                android:id="@+id/btnExchange"
                android:layout_width="204dp"
                android:layout_height="34.2dp"
                android:background="@drawable/btn_change_selector" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnSet"
        android:background="@drawable/btn_set_selector"
        android:layout_width="364dp"
        android:layout_height="34.2dp"
        android:layout_marginTop="20dp" />

</LinearLayout>