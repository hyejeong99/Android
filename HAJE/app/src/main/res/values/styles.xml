<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/mainPurple</item>
        <item name="colorPrimaryDark">@color/mainPurple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LoginPage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
        <item name="android:windowBackground">@drawable/bg_login</item>
    </style>

    <style name="AppTheme.SignUpPage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
    </style>

    <style name="AppTheme.SignUpPage2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
        <item name="android:windowBackground">@drawable/ic_bg_signup2</item>
    </style>

    <style name="AppTheme.SplashPage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
        <item name="android:windowBackground">@drawable/startpage</item>
    </style>

    <style name="AppTheme.PaymentPage">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:statusBarColor">@color/mainPurple</item>
    <item name="android:windowBackground">@drawable/bg_payment</item>
    </style>

    <style name="CustomRadioTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">#7a7a7a</item>
        <item name="android:colorControlActivated">@color/mainPurple</item>
        <item name="android:colorControlHighlight">@color/mainPurple</item>
    </style>

    <style name="AppTheme.Drivercall">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
    </style>

    <style name="AppTheme.ShowRidePage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
        <item name="android:windowBackground">#F2F2F2</item>
    </style>

</resources>
